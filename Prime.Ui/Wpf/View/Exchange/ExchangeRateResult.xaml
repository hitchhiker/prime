<UserControl x:Class="Prime.Ui.Wpf.View.Exchange.ExchangeRateResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Prime.Ui.Wpf.ViewModel"
             xmlns:prime="clr-namespace:prime"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModel:ExchangeRateResultViewModel}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label FontSize="28" FontWeight="Bold" Foreground="White" Content="{Binding UserInputValue, Converter={StaticResource PropertyValueStringConverter}}" ContentStringFormat="{}{0} = " Margin="0,10,0,0"/>
                <Label Margin="5,0,0,0" FontSize="50" FontWeight="Bold" Foreground="DarkGray" Padding="0,0,0,20" Content="{Binding FinalPrice, Converter={StaticResource PropertyValueStringConverter}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock" >
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Right" Text="{Binding AssetLeft.ShortCode}"/>
                    <Label Content="{Binding InfoLeft}"/>
                    <Label Content="{Binding NetworkLeft}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="40,0,0,0" Visibility="{Binding IsConverted, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock HorizontalAlignment="Center" Text="{Binding AssetConvert.ShortCode}"/>
                    <Label Content="{Binding InfoConvert}"/>
                    <Label Content="{Binding NetworkMiddle}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="40,0,0,0">
                    <TextBlock HorizontalAlignment="Left" Text="{Binding AssetRight.ShortCode}"/>
                    <Label Content="{Binding InfoRight}"/>
                    <prime:HumanTime DateTime="{Binding UtcCreated}" TextAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
