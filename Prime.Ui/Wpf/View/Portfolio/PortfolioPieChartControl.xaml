<UserControl x:Class="Prime.Ui.Wpf.View.Portfolio.PortfolioPieChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Prime.Ui.Wpf.ViewModel"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:PortfolioPieChartViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <wpf:PieChart x:Name="Pie" LegendLocation="Right" DataTooltip="{x:Null}" Margin="0,0,0,0" Height="280" Width="400" DataContext="{Binding ListPieChartItems}"/>
    </Grid>
</UserControl>
