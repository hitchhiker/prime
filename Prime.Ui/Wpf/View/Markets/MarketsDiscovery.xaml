<UserControl x:Class="Prime.Ui.Wpf.View.Markets.MarketsDiscovery"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Prime.Ui.Wpf.ViewModel"
             xmlns:wpf="clr-namespace:Prime.Ui.Wpf.View.Markets"
             xmlns:afk="clr-namespace:Prime.Ui.Wpf.View"
             xmlns:control="clr-namespace:Prime.Ui.Wpf.Components.Control"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:MarketsDiscoveryViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <control:MoreScrollViewer Background="{DynamicResource ScrollViewerBackground}" BorderThickness="0" PageIncrement="2">
        <ItemsControl ItemsSource="{Binding ListMarketControls}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel FlowDirection="LeftToRight">
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <wpf:MarketControl/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </control:MoreScrollViewer>
</UserControl>
