<UserControl x:Class="Prime.Ui.Wpf.View.Trade.BuySell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:Prime.Ui.Wpf.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModel:BuySellViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer Background="{DynamicResource ScrollViewerBackground}" BorderThickness="0" x:Name="SViewer">
        <StackPanel Margin="20" Orientation="Vertical">
            <TextBlock>Trade</TextBlock>
            <TabControl Margin="0,20,0,20" Background="#242424" BorderThickness="0" ItemsSource="{Binding}">
                <TabItem Header="Buy">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <StackPanel.Resources>
                            <Style TargetType="StackPanel">
                                <Setter Property="Orientation" Value="Horizontal" />
                            </Style>
                            <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                <Setter Property="Width" Value="150" />
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Width" Value="400" />
                                <Setter Property="BorderBrush" Value="White" />
                            </Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Width" Value="400" />
                            </Style>
                        </StackPanel.Resources>
                        <StackPanel Margin="0,10,0,0">
                            <Label Content="Units" Target="{Binding ElementName=txtBuyUnits}"/>
                            <TextBox x:Name="txtBuyUnits" Text="{Binding Units, Mode=OneWay}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Margin="0,10,0,0">
                            <Label Content="Bid" Target="{Binding ElementName=txtBuyBid}"/>
                            <TextBox x:Name="txtBuyBid" Text="{Binding BidAsk, Mode=OneWay}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Margin="0,10,0,0">
                            <Label Content="Type" Target="{Binding ElementName=cmbBuyType}"/>
                            <ComboBox  x:Name="cmbBuyType" ItemsSource="{Binding Path=ListTradeTypes}" DisplayMemberPath="TradeTypeName" SelectedValue="{Binding Path=TradeTypeModel}" Loaded="CmbBuyType_Loaded"/>
                        </StackPanel>
                        <StackPanel Margin="0,10,0,0">
                            <Label Content="Time in Force" Target="{Binding ElementName=cmbBuyTimeInForce}"/>
                            <ComboBox x:Name="cmbBuyTimeInForce" ItemsSource="{Binding Path=ListTimeInForce}" DisplayMemberPath="TimeInForceName" SelectedValuePath="Key" SelectedValue="{Binding Path=TimeInForceModel}" Loaded="CmbBuyTimeInForce_Loaded" />
                        </StackPanel>
                        <StackPanel Margin="0,10,0,0">
                            <Label Content="Total" Target="{Binding ElementName=txtBuyTotal}"/>
                            <TextBox x:Name="txtBuyTotal" Text="{Binding Total, Mode=OneWay}" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                        <StackPanel Margin="0,15,0,0">
                            <Button x:Name="btnBuy" Command="{Binding BuyCommand}" Width="100" HorizontalAlignment="Left" Cursor="Hand" Background="#337AB7" Foreground="White">Buy</Button>
                        </StackPanel>
                    </StackPanel>
                </TabItem>
